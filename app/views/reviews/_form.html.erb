<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="mb-3">
        <%= simple_form_for [@hair, @review] do |f| %>
          <div class="form-group">
            <%= f.label :comment, "Write your review" %>
            <%= f.text_area :comment, class: "form-control", rows: 4, placeholder: "Share your experience..." %>
          </div>

          <div class="form-group">
            <%= f.label :rating, "Rating (0-5)" %>
            <%= f.number_field :rating, class: "form-control", min: 0, max: 5, step: 0.1 %>
          </div>

          <%= f.submit "Submit Review", class: "btn btn-primary mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
