<div class="container d-flex justify-content-center align-items-center" style="height: 50vh; margin-top: 100px;">
  <div class="card p-4 shadow-sm" style="width: 400px; border-radius: 10px;">
    <div class="card-body">
      <h2 class="text-center mb-3">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
