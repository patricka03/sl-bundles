<div class="container d-flex justify-content-center align-items-center" style="height: 50vh; margin-top: 100px;">
  <div class="card p-4 shadow-sm" style="width: 400px; border-radius: 10px;">
    <div class="card-body">
      <h2 class="text-center mb-3">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center mt-3">
          <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
